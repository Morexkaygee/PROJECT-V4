# Production Environment Configuration
# Copy this file to .env and update values for production deployment

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/attendance_db

# Security Configuration
SECRET_KEY=your-super-secure-secret-key-for-production-change-this
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Face Recognition Settings
FACE_RECOGNITION_TOLERANCE=0.4
GPS_TOLERANCE_METERS=100

# Campus Locations (JSON format)
ALLOWED_LOCATIONS={"main_campus": {"lat": 7.3000, "lng": 5.1450, "radius": 500}, "satellite_campus": {"lat": 7.2950, "lng": 5.1400, "radius": 300}}

# CORS Configuration for Production
ENVIRONMENT=production
PRODUCTION_CORS_ORIGINS=["https://attendance.futa.edu.ng", "https://www.attendance.futa.edu.ng"]

# Optional: Staging CORS Origins
STAGING_CORS_ORIGINS=["https://staging-attendance.futa.edu.ng", "http://localhost:3000"]

# Server Configuration
HOST=0.0.0.0
PORT=8000

# SSL Configuration (for HTTPS)
SSL_CERT_FILE=/path/to/cert.pem
SSL_KEY_FILE=/path/to/key.pem

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/var/log/attendance/app.log

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# File Upload Limits
MAX_FILE_SIZE=5242880  # 5MB in bytes
ALLOWED_FILE_TYPES=["image/jpeg", "image/png", "image/webp"]